{
  "name": "nfc-card-battle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:server": "pnpm --filter @nfc-card-battle/server dev",
    "dev:mobile": "pnpm --filter @nfc-card-battle/mobile start",
    "build:server": "pnpm --filter @nfc-card-battle/server build",
    "db:migrate": "pnpm --filter @nfc-card-battle/server db:migrate",
    "db:seed": "pnpm --filter @nfc-card-battle/server db:seed",
    "db:push": "pnpm --filter @nfc-card-battle/server db:push",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}
