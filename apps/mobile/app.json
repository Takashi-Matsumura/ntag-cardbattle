{
  "expo": {
    "name": "NFC Card Battle",
    "slug": "nfc-card-battle",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "nfc-battle",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.nfccardbattle.app",
      "infoPlist": {
        "NFCReaderUsageDescription": "NFCカードを読み取ってバトルに使用します",
        "NSCameraUsageDescription": "QRコードを読み取って対戦相手とマッチングします",
        "NSLocalNetworkUsageDescription": "近くのプレイヤーとローカル対戦するために使用します",
        "NSBonjourServices": ["_nfc-battle._tcp", "_nfc-battle._udp"],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.nfccardbattle.app"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "NFCカードを読み取ってバトルに使用します"
        }
      ],
      "expo-secure-store"
    ]
  }
}
