generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// キャラクターテンプレート（管理者が事前に作成）
model Character {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  hp        Int
  attack    Int
  defense   Int
  imageUrl  String?
  createdAt DateTime @default(now())
}
